include LICENSE
include README.md
include CHANGELOG.md
include INSTALL.md
include pyproject.toml
include cell_types.txt

# Include package source files and model files
recursive-include src/panhumanpy *.py
recursive-include tests *.py
recursive-include experiments *

# Explicitly exclude development files
global-exclude .git*
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .pytest_cache
global-exclude *.egg-info
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Explicitly exclude directories
exclude .devcontainer
exclude .pixi
exclude utils
exclude src/package_name
prune .devcontainer
prune .pixi
prune utils
prune src/package_name
prune data
prune queries
prune dist
prune build
prune .git
prune .pytest_cache
prune **/__pycache__ 